---
const { href, name, color} = Astro.props;
---

<a
  href={href}
  role="link"
  download={name}]
  class=`
    text-xl
    md:text-ms
    inline-flex 
    items-center 
    justify-center 
    gap-2 px-4 py-2
    md:px-3 md:py-1  
    text-white 
    ${color}  
    max-w-fit rounded-xl`
>
  <slot />
</a>